	again = ''
	while again.lower() not in ('y', 'n', 'yes', 'no'):
		again = input("Would you like to play again? (y/n) ")
		if again.lower() in ('y', 'yes'):
			print("Starting Game ....")
			return start_game(quotes)
		else:
			print("Okay, Good Bye! ")

